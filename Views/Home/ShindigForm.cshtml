@model Shindig

<form action="shindig" method="post">
        <div class="form-group" col-sm-12>
        <label>Title</label>
        <input type="text" name="title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Duration(Number of Minutes)</label>
        <input type="text" name="Duration" class="form-control" />
    </div>
    <div class="form-group">
        <label>Duration(Number of Minutes)</label>
        <input type="text" name="Duration" class="form-control" />
        <select name="DurationSegment" id="">
            <option value="Hours"></option>
            <option value="Minutes"></option>
            <option value="Days"></option>
        </select>

    
    </div>
    <div class="form-group">
        <label>Planner Name</label>
        <input type="text" name="Planner" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="date" name="ShindigDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="textarea" name="description" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success" />
</form>